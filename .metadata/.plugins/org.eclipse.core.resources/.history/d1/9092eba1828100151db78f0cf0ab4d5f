package com.wkoppelb.mockito.scrapbook;

import org.junit.Test;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;

public class ATest {

	@Mock
	B b;
	private A a;
	
	@Before
	public void setup() {
		MockitoAnnotations.initMocks(this);
	}
	
	@Test
	public void usesVoidMethod_CallsVoidMethod() {
		a = new A(b);
	}

}
